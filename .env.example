# HealthAI Environment Variables
# Copy this file to .env and fill in your actual API keys and credentials

# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here-change-in-production

# Auth0 Configuration (OpenID Connect)
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# Google Gemini API (for AI diagnosis, recommendations, summaries)
GEMINI_API_KEY=your-gemini-api-key-here

# ElevenLabs Text-to-Speech
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL

# Snowflake Data Warehouse (Health records storage)
SNOWFLAKE_ACCOUNT=your-account-identifier
SNOWFLAKE_USER=your-snowflake-user
SNOWFLAKE_PASSWORD=your-snowflake-password
SNOWFLAKE_DATABASE=HEALTHAI
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_WAREHOUSE=COMPUTE_WH

# Solana Blockchain (Report verification & hashing)
SOLANA_PRIVATE_KEY=your-base58-encoded-solana-private-key
SOLANA_NETWORK=devnet

# DigitalOcean Spaces (Cloud file storage)
DO_SPACES_KEY=your-digitalocean-spaces-key
DO_SPACES_SECRET=your-digitalocean-spaces-secret
DO_SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
DO_SPACES_BUCKET=healthai-reports
